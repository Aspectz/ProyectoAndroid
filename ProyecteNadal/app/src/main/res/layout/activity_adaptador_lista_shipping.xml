<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="20dp"

    tools:context=".adapters.AdaptadorPedidos">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="105dp"
        android:background="@drawable/custom_shipping_items"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_margin="2dp"
            app:cardCornerRadius="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/pedidoFotoShipping"
                android:layout_width="100dp"
                android:layout_height="100dp"

                tools:src="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreProductoShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/names"
                android:textColor="@color/black"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/precioProductoShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fechaPedido"></TextView>

            <TextView
                android:id="@+id/cantidadProductoShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="cantidad"></TextView>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/priceFinalShipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"></TextView>


</LinearLayout>